extends layout

block content
 h2.page-header Login
 p Informe seu email e senha:
 if errors
  each error, i in errors
   div.alert.alert-danger #{error.msg}
 form(method='post', action='/users/login')
  .form-group
   label Email
   input.form-control(name='username', type='text', placeholder='Digite aqui seu email')
  .form-group
   label Password
   input.form-control(name='password', type='password', placeholder='Digite aqui sua senha')
  input.btn.btn-primary(type='submit', name='submit',value='Acessar')